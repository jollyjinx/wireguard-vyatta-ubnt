tag:
priority: 459
type: txt
help: WireGuard interface name
val_help: <wgN>; WireGuard interface name
syntax:expression: pattern $VAR(@) "^wg[0-9]+$" \
                   ; "wg must be (wg0-wg999)"



begin:
	echo $(date|sed -e 's/\n//;') "wireguard/node.def: begin:action: $COMMIT_ACTION arg: $VAR(@)" >> /tmp/wg.log
    echo $(date|sed -e 's/\n//;') "wireguard/node.def:ip route show" >> /tmp/wg.log
    ip route show >> /tmp/wg.log
    echo $(date|sed -e 's/\n//;') "wireguard/node.def: ip route show done" >> /tmp/wg.log


create:  
    echo $(date|sed -e 's/\n//;') "wireguard/node.def: create:action: $COMMIT_ACTION arg: $VAR(@)" >> /tmp/wg.log
	ip link show dev $VAR(@) &>/dev/null || sudo ip link add dev $VAR(@) type wireguard

delete: 
    echo $(date|sed -e 's/\n//;') "wireguard/node.def: delete:action: $COMMIT_ACTION arg: $VAR(@) eval $VAR(down-command/@) " >> /tmp/wg.log
    eval "$VAR(down-command/@)" >/dev/null || exit 1;
    echo $(date|sed -e 's/\n//;') "wireguard/node.def: sudo ip link del dev $VAR(@)" >> /tmp/wg.log
    sudo ip link del dev $VAR(@)
    echo $(date|sed -e 's/\n//;') "wireguard/node.def: delete:action ip route show" >> /tmp/wg.log
    ip route show >> /tmp/wg.log
    echo $(date|sed -e 's/\n//;') "wireguard/node.def: delete:action  ip route show done" >> /tmp/wg.log



end:
    echo $(date|sed -e 's/\n//;') "wireguard/node.def: end:action: $COMMIT_ACTION arg: $VAR(@)" >> /tmp/wg.log
    if [ "$COMMIT_ACTION" != DELETE ];
    then
        echo $(date|sed -e 's/\n//;') "wireguard/node.def: end: no delete: $COMMIT_ACTION arg: $VAR(@)" >> /tmp/wg.log
        eval "$VAR(down-command/@) >/dev/null" || exit 1;
        sudo ip link set down dev $VAR(@)
        if [ ! -n "$VAR(./disable)" ];
        then
          echo $(date|sed -e 's/\n//;')" wireguard/node.def: end: disable" >> /tmp/wg.log
          sudo ip link set up dev $VAR(@)
          eval "$VAR(up-command/@) >/dev/null" || exit 1;
          if [ "$VAR(route-allowed-ips/@)" == "true" ];
          then
            echo $(date|sed -e 's/\n//;')" wireguard/node.def: end: route-allowed-ips" >> /tmp/wg.log

            [ -n "$VAR(./route-table)" ] && tnum="$VAR(./route-table/@)"
            for i in $(sudo wg show $VAR(@) allowed-ips | sed 's/^.*\t//;s/ /\n/g' | sort -nr -k 2 -t /);
            do
             echo $(date|sed -e 's/\n//;')" wireguard/node.def: end: i:$i" >> /tmp/wg.log
             if [ $i == "(none)" ];
             then
                continue;
             fi
             [[ $(sudo ip route get "$i" 2>/dev/null) == *dev\ $VAR(@)\ * ]] || sudo ip route add "$i" dev $VAR(@)
            done
          fi
        fi
     fi


commit:expression: $VAR(./private-key) != "" ;
	"Private key must be specified for $VAR(@)"

commit:expression:   exec "${vyatta_sbindir}/vyatta-check-allowed-ips.pl --intf $VAR(@)"

commit:expression:   exec "echo 'wireguard/node.def:commit $VAR(@)' >>wg.log"


